<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BTViz" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand color. -->
        <item name="colorPrimary">@color/blue_shade</item>
        <item name="colorPrimaryVariant">@color/white_shade</item>
        <item name="colorOnPrimary">@color/white_shade</item>

        <!-- Status Bar Color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Transparent Status Bar. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Light Status Bar. -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Light Navigation Bar. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Window Animation Style. -->
        <item name="android:windowAnimationStyle">@style/ScreenActivityAnimation</item>

        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.BTViz" parent="Base.Theme.BTViz" />

    <!-- Screen Activity Animation. -->
    <style name="ScreenActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Text Style. -->
    <style name="HeaderText">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">@color/black_shade</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_shade</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Button Style. -->
    <style name="MaterialButton">
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_shade</item>
        <item name="rippleColor">@color/white_shade</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ColoredButton">
        <item name="rippleColor">@color/white_shade</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_shade</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TransparentButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_shade</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Toolbar Popup Menu Style. -->
    <style name="ToolbarPopupMenu" parent="ThemeOverlay.Material3.Light">
        <item name="popupMenuBackground">@color/white_shade</item>
        <item name="android:textColor">@color/black_shade</item>
    </style>

    <!-- Alert Dialog Style. -->
    <style name="MaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Background Color. -->
        <item name="android:background">@color/white_shade</item>
        <!-- Text Color for Title and Message. -->
        <item name="colorOnSurface">@color/black_shade</item>
    </style>

</resources>